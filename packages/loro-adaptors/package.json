{
  "name": "loro-adaptors",
  "version": "1.0.0",
  "description": "Shared CRDT adaptors for Loro protocol",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "loro-protocol": "workspace:*"
  },
  "peerDependencies": {
    "loro-crdt": "^1.7.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "tsdown": "^0.14.1",
    "vitest": "^2.0.0"
  },
  "keywords": [
    "loro",
    "crdt",
    "adaptors",
    "websocket",
    "collaborative-editing"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/loro-dev/loro-protocol",
    "directory": "packages/loro-adaptors"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist/**/*",
    "src/**/*"
  ]
}
